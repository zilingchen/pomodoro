@import url('https://fonts.googleapis.com/css2?family=Fjalla+One&family=Noto+Sans+TC:wght@100;300;400;500;700;900&display=swap')
  
.bg-green
  background #304030

.nav
  background #E8E8E8
  width 80px

.playbtn
  background #E8E8E8
  padding 1rem
  border-radius 50%
  width 64px
  height 64px

.circle
  border 2px solid #E8E8E8
  border-radius 50%
  margin 0.5rem
  width 48px
  height 48px
  background #304030
  // padding-right 7px

.playbtn:hover
  background #E8E8E8

.circle:hover
  background #304030
  border 2px solid #E8E8E8

.text-time
  font-family 'Fjalla One', sans-serif
  font-size 180px
  color #E8E8E8
  text-align left
  margin 0

.text-list
  font-family 'Noto Sans TC', sans-serif
  color #E8E8E8
  font-size 40px
  font-weight normal

.text-sis
  font-family 'Noto Sans TC', sans-serif
  color #E8E8E8
  font-size 16px
  line-height 59px
  text-align center
  cursor pointer

.boxshadow
  box-shadow 20px 0px 20px -30px rgb(0 15 0)

.inputcircle
  border-radius 4.25rem
  padding 0 1.3rem 0 1.3rem
  weight 560px
  height 56px

.btn-list
  width 48px
  height 40px
  background #F08448
  color #FFFFFF
  position absolute
  right 8px
  top 50%
  transform translateY(-50%)

.img-position
  position absolute
  right -165%

#list
  overflow hidden

.text-time-list
  font-family 'Fjalla One', sans-serif
  font-size 180px
  color #E8E8E8
  text-align center
  margin 0

.taskcircle
  width 24px
  height 24px
  border 2px solid white
  border-radius 50%

ul
  margin-block-start 0
  margin-block-end 0
  padding-inline-start 0

li
  list-style none

#home
  ul>li:first-child>div>.taskcircle
    width 40px
    height 40px
    border 2px solid white
    border-radius 50%
    line-height 47px
    position relative
    left -5px
    margin-bottom 5%

  ul>li:first-child>div>.taskText
    font-size 32px
    color #E8E8E8
    font-family 'Noto Sans TC', sans-serif;
    font-weight 500
    margin-bottom 5%

.taskText
  font-size 16px
  text-align left
  font-family 'Noto Sans TC', sans-serif
  color #E8E8E8
  line-height 24px
  font-weight 300

.smcircle
  display inline-block
  width 8px
  height 8px
  border-radius 50%
  background #DFE2B6

.smcircle1
  display inline-block
  width 8px
  height 8px
  border-radius 50%
  background rgba(223, 226, 182, 0.3)

.smcircleLeft
  position absolute
  top 33%
  left 13%

.text-analysis
  color #E8E8E8
  font-size 40px
  font-family 'Noto Sans TC', sans-serif

#analysis
  overflow hidden

  .title
   color #E8E8E8
   font-size 16px
  .text-title
    color #E8E8E8
    font-size 16px
    font-family 'Noto Sans TC', sans-serif
  .text-green
    color #6C9460
    font-size 80px
    font-family 'Noto Sans TC', sans-serif
  .text-orange
    color #F08448
    font-size 80px
    font-family 'Noto Sans TC', sans-serif
  .border
    border 1px solid rgba(255, 255, 255, 0.3)!important
    border-radius 8px
    position relative
  .border::after
    content ''
    width 1px
    height 80%
    position absolute
    background rgba(255,255,255,0.3)
    top 50%
    left 50%
    transform translate(-50%,-50%)
  .data
    color rgba(232, 232, 232, 0.3)
    font-size 16px
  .week
    color #E8E8E8
    font-size 16px
  .dateText
    display inline-block
    font-family 'Fjalla One', sans-serif
    font-size 16px
    color rgba(255, 255, 255, 0.5)
